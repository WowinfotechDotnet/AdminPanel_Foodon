
@{
    ViewBag.Title = "AdminProfile";
}


<section class="content" ng-controller="AdminCtrl">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                <div class="card">
                    <div class="card-header" style="background-color:orange;color:black">
                        <h5><b>Profile</b></h5>
                    </div>

                    <div class="card-body">
                        <form role="form" name="K1" ng-submit="K1(K1.$valid)" data-toggle="validator">
                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" ng-model="ADMIN_ID" style="display:none">
                                    <div class="form-group">
                                        <label>Admin Name:</label> <label style="color:red">*</label>
                                        <input type="text" class="form-control" ng-model="ADMIN_NAME" placeholder="Enter admin name" required>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Mobile Number:</label><label style="color:red">*</label>
                                        <input type="number" class="form-control" ng-model="MOBILE_NO" placeholder="Enter mobile number" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Address:</label><label style="color:red">*</label>
                                        <textarea class="form-control" rows="3" ng-model="ADDRESS" placeholder="Enter address" required></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Email:</label>
                                        <input type="email" class="form-control" ng-model="EMAIL" placeholder="Enter email">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- textarea -->
                                    <div class="form-group">
                                        <label>Password:</label><label style="color:red">*</label>
                                        <input class="form-control" ng-model="PASSWORD" placeholder="Enter password" type="password" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="button" class="btn btn-sm" style="background-color:green;color:white" ng-disabled="K1.$invalid" ng-click="AddAdmin()">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>


            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/AngularJs/AdminProfile.js"></script>

}

